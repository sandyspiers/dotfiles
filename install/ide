#!/bin/bash

ide=(
    git
    stow
    man-db
    htop
    btop
    curl
    wget
    openssh
    github-cli
    unzip

    fd
    ripgrep
    neofetch
    reflector

    fish
    carapace
    nushell

    zellij
    yazi
    helix
    
    starship
    zoxide
    eza
    lazygit
)

# raw install
./install/stow "${ide[@]}"
./install/yeah "${ide[@]}"

# update yazi
ya pack -i

# install zellij stuff
./zellij/.config/zellij/plug.sh
